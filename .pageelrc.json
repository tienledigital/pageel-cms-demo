{
  "version": 2,
  "collections": [
    {
      "id": "blog",
      "name": "Blog",
      "postsPath": "src/content/blog",
      "imagesPath": "public/images",
      "template": {
        "fields": [
          {
            "name": "title",
            "type": "string"
          },
          {
            "name": "description",
            "type": "string"
          },
          {
            "name": "pubDate",
            "type": "date"
          },
          {
            "name": "author",
            "type": "string"
          },
          {
            "name": "image",
            "type": "string"
          },
          {
            "name": "tags",
            "type": "array"
          },
          {
            "name": "draft",
            "type": "string"
          }
        ]
      },
      "tableColumns": [
        "description",
        "pubDate",
        "author",
        "tags",
        "draft"
      ],
      "columnWidths": {
        "__name__": 40,
        "description": 30
      }
    },
    {
      "id": "docs",
      "name": "Docs",
      "postsPath": "src/content/docs",
      "imagesPath": "public/images"
    }
  ],
  "activeCollectionId": "blog",
  "settings": {
    "projectType": "github",
    "postFileTypes": ".md,.mdx",
    "imageFileTypes": "image/*",
    "publishDateSource": "file",
    "imageCompressionEnabled": false,
    "maxImageSize": 500,
    "imageResizeMaxWidth": 1024
  },
  "commitMessages": {
    "newPost": "feat(content): add post \"{filename}\"",
    "updatePost": "fix(content): update post \"{filename}\"",
    "newImage": "feat(assets): add image \"{filename}\"",
    "updateImage": "refactor(assets): update image for \"{filename}\""
  }
}